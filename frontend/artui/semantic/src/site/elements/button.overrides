/*******************************
         Site Overrides
*******************************/

/* 与input, dropdown采用相同的结构 */
.ui.button {
  border: 1px solid transparent;
}
.ui.button:last-child {
  margin-right: 0em;
}

/* 缺省为1em */
.ui.buttons .button,
.ui.buttons .or,
.ui.button {
  font-size: 1em;
}
.ui.medium.buttons .button,
.ui.medium.buttons .or,
.ui.medium.button {
  font-size: @medium;
}