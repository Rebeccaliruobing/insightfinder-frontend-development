/*******************************
         Site Overrides
*******************************/

/* 与input, selection保持相同的高度 */
.ui.button {
  border: 1px solid transparent;
}

/* 缺省为1em */
.ui.buttons .button,
.ui.buttons .or,
.ui.button {
  font-size: 1em;
}
.ui.medium.buttons .button,
.ui.medium.buttons .or,
.ui.medium.button {
  font-size: @medium;
}