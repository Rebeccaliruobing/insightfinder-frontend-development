/*******************************
         Site Overrides
*******************************/

// Flat
.ui.flat.segment, .ui.flat.segments {
  box-shadow: none;
}

.ui.segment:not(.inverted) {
  .loopColors({
    &.@{colorName}{
      border-top: 0px;
      border-bottom: @coloredBorderSize solid @@colorName;
    }
  });
}
